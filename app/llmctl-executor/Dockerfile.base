FROM nvidia/cuda:12.8.0-cudnn-runtime-ubuntu24.04

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PATH="/opt/venv/bin:${PATH}" \
    LLMCTL_EXECUTOR_BASE_CUDA_TAG="12.8.0-cudnn-runtime-ubuntu24.04" \
    LLMCTL_EXECUTOR_FLAVOR="vllm"

ARG VLLM_VERSION=0.9.0
ARG TRANSFORMERS_VERSION=4.53.3
ARG INSTALL_STUDIO_BACKEND_DEPS=true

LABEL org.opencontainers.image.title="llmctl-executor-vllm" \
      org.opencontainers.image.description="Dual-mode vLLM executor image (GPU-preferred with CPU fallback) for llmctl Studio runtime" \
      io.llmctl.executor.flavor="vllm" \
      io.llmctl.executor.cuda_tag="12.8.0-cudnn-runtime-ubuntu24.04" \
      io.llmctl.executor.vllm_version="${VLLM_VERSION}" \
      io.llmctl.executor.transformers_version="${TRANSFORMERS_VERSION}"

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        bash \
        ca-certificates \
        curl \
        git \
        gnupg \
        openssh-client \
        python3 \
        python3-pip \
        python3-venv \
        tesseract-ocr \
        tesseract-ocr-eng \
    && python3 -m venv /opt/venv \
    && /opt/venv/bin/pip install --no-cache-dir --upgrade pip \
    && if [ "${VLLM_VERSION}" = "0.9.0" ] && ! printf '%s' "${TRANSFORMERS_VERSION}" | grep -Eq '^4\.'; then \
        echo "Unsupported dependency combination: vllm ${VLLM_VERSION} requires transformers 4.x (got ${TRANSFORMERS_VERSION})." >&2; \
        exit 1; \
    fi \
    && rm -rf /var/lib/apt/lists/*

COPY app/llmctl-executor/requirements.vllm.lock.txt /app/app/llmctl-executor/requirements.vllm.lock.txt
COPY app/llmctl-executor/requirements.studio-runtime.txt /app/app/llmctl-executor/requirements.studio-runtime.txt
COPY app/llmctl-executor/requirements.txt /app/app/llmctl-executor/requirements.txt
RUN /opt/venv/bin/pip install --no-cache-dir -r /app/app/llmctl-executor/requirements.vllm.lock.txt \
    && if [ "${INSTALL_STUDIO_BACKEND_DEPS}" = "false" ]; then \
        /opt/venv/bin/pip uninstall -y Flask Flask-Seeder SQLAlchemy psycopg psycopg-binary celery redis gunicorn Flask-SocketIO simple-websocket chromadb google-api-python-client google-auth google-auth-httplib2 setuptools || true; \
    fi \
    && /opt/venv/bin/pip install --no-cache-dir "vllm==${VLLM_VERSION}" "transformers==${TRANSFORMERS_VERSION}" \
    && /opt/venv/bin/pip check \
    && /opt/venv/bin/python3 -c "import torch, vllm; print(torch.__version__); print(vllm.__version__)" \
    && for blocked in codex gemini claude; do \
        if command -v "${blocked}" >/dev/null 2>&1; then \
            echo "Denied CLI binary found in vLLM executor image: ${blocked}" >&2; \
            exit 1; \
        fi; \
    done

WORKDIR /app
COPY app/llmctl-executor /app/app/llmctl-executor

CMD ["python3", "app/llmctl-executor/run.py"]
