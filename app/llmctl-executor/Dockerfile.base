FROM nvidia/cuda:12.8.0-cudnn-runtime-ubuntu24.04

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PATH="/opt/venv/bin:${PATH}" \
    LLMCTL_EXECUTOR_BASE_CUDA_TAG="12.8.0-cudnn-runtime-ubuntu24.04"

ARG INSTALL_CLAUDE=true
ARG VLLM_VERSION=0.9.0

LABEL org.opencontainers.image.title="llmctl-executor-base" \
      org.opencontainers.image.description="Pinned CUDA + vLLM + Chromium + Node CLIs base image for llmctl executor" \
      io.llmctl.executor_base.cuda_tag="12.8.0-cudnn-runtime-ubuntu24.04" \
      io.llmctl.executor_base.vllm_version="${VLLM_VERSION}"

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        bash \
        ca-certificates \
        curl \
        git \
        gnupg \
        openssh-client \
        python3 \
        python3-pip \
        python3-venv \
    && mkdir -p /etc/apt/keyrings \
    && curl -fsSL https://deb.nodesource.com/gpgkey/nodesource-repo.gpg.key \
        | gpg --dearmor -o /etc/apt/keyrings/nodesource.gpg \
    && echo "deb [signed-by=/etc/apt/keyrings/nodesource.gpg] https://deb.nodesource.com/node_22.x nodistro main" \
        > /etc/apt/sources.list.d/nodesource.list \
    && curl -fsSL https://packages.cloud.google.com/apt/doc/apt-key.gpg \
        | gpg --dearmor -o /etc/apt/keyrings/google-cloud.gpg \
    && echo "deb [signed-by=/etc/apt/keyrings/google-cloud.gpg] https://packages.cloud.google.com/apt cloud-sdk main" \
        > /etc/apt/sources.list.d/google-cloud-sdk.list \
    && curl -fsSL https://dl.google.com/linux/linux_signing_key.pub \
        | gpg --dearmor -o /etc/apt/keyrings/google-linux.gpg \
    && echo "deb [arch=amd64 signed-by=/etc/apt/keyrings/google-linux.gpg] http://dl.google.com/linux/chrome/deb/ stable main" \
        > /etc/apt/sources.list.d/google-chrome.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
        google-chrome-stable \
        nodejs \
    && ln -sf /usr/bin/google-chrome-stable /usr/local/bin/chromium-browser \
    && ln -sf /usr/bin/google-chrome-stable /usr/local/bin/chromium \
    && npm install -g @openai/codex@latest @google/gemini-cli@latest \
    && if [ "${INSTALL_CLAUDE}" = "true" ]; then npm install -g @anthropic-ai/claude-code@latest; fi \
    && python3 -m venv /opt/venv \
    && /opt/venv/bin/pip install --no-cache-dir --upgrade pip \
    && /opt/venv/bin/pip install --no-cache-dir "vllm==${VLLM_VERSION}" \
    && /opt/venv/bin/python3 -c "import torch, vllm; print(torch.__version__); print(vllm.__version__)" \
    && chromium --version \
    && node --version \
    && rm -rf /var/lib/apt/lists/*
